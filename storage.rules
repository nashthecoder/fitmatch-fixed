rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(resource).data.isOwner == true
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read public files
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid != null;
    }
    
    // Validate file uploads
    match /users/{userId}/mesPhotos/{fileName} {
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size <= 10 * 1024 * 1024  // 10MB limit for photos
        && request.resource.contentType.matches('image/.*');
    }
    
    match /users/{userId}/mesVideos/{fileName} {
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size <= 50 * 1024 * 1024  // 50MB limit for videos
        && request.resource.contentType.matches('video/.*');
    }
    
    match /users/{userId}/mesPhotos/thumbs/{fileName} {
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size <= 2 * 1024 * 1024;  // 2MB limit for thumbnails
    }
    
    match /users/{userId}/mesVideos/thumbs/{fileName} {
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size <= 2 * 1024 * 1024;  // 2MB limit for thumbnails
    }
  }
}
